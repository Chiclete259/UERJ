# Faça um algoritmo que receba o salário de um funcionário, calcule e mostre o novo salário,
# sabendo-se que este sofreu um aumento de 25%.


def sal(aumento):
    print(f"O salário do funcionário atual é de R${salario:.2f}")
    print(f"Aconteceu um aumento de R${juros:.2f} no salário dele")
    print(f"O salário atual com o aumento é de: R${aumento:.2f}")


salario = float(input("Entre com o salário do funcionário: "))
juros = salario*0.25
aumento = salario+juros
sal(aumento)
